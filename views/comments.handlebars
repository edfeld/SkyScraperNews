<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h3>Article:</h3>
      <h4>
        <a id="article-title" data-id="{{commentsObj._id}}" href="{{commentsObj.link}}" target=”_blank”>{{commentsObj.title}}</a>
      </h4>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title"> Comments</h5>
          <ul id="article-list" class="list-group">

            {{#each commentsObj.comments}}
            <li class="list-group-item"><span><b>Author:</b></span> {{this.author}}
              <br>{{this.comment}}
              <button class="btn btn-danger float-right delete-comment" data-id="{{this._id}}">
		            x
	            </button>
            </li>
            {{/each}}
          </ul>
          <form class="mt-3"> 
            <div class="form-group"> 
            <label for="formGroupAuthor">Author</label> 
            <input class="form-control" id="formGroupAuthor" placeholder="Your Name"> 
            </div> 
            <div class="form-group"> 
              <label for="formGroupComment">Comment</label> 
              <input class="form-control" id="formGroupComment" placeholder="Add your comment here"> 
            </div> 
            {{!-- <a href="#" class="btn btn-primary btn-lg" role="button" aria-pressed="true">Primary link</a> --}}
          </form>
            <button class="btn btn-danger float-right add-comment">Add Comment</button>
          <a class="clearfix" href="/">← Back To Home</a>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/comments.js"></script>